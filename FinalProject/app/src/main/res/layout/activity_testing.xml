<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is Your Personal Skincare Report"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp">
    </TextView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skin Tone: "
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tone"
                android:background="#DDE0B0"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pore Condition: "
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/pore"
                android:background="#FFE0B2"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skin Aging: "
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_width="287dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/aging"
                android:background="#DDE0B0"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark Circles: "
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_width="273dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/dark"
                android:background="#FFE0B2"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blackhead: "
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/black"
                android:background="#DDE0B0"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others: "
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/others"
                android:background="#FFE0B2"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggestions: "
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_width="273dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/suggestions"
                android:background="#DDE0B0"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp"/>
        </LinearLayout>
    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Want Some Recommended Products?"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:textSize="20sp">
</TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/noButton"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:text="Not Now"
            android:textColor="@color/black"
            android:onClick="previousLayout"/>

        <Button
            android:id="@+id/yesButton"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:text="Yes!"
            android:onClick="nextLayout"/>

    </LinearLayout>
</LinearLayout>